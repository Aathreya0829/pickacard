  <script>
    const cards = [
      { name: 'Act', url: 'https://i.postimg.cc/fb9Bcs7y/Act.png', message: "It can feel scary but you got this. Youâ€™re being guided to move the needle forward in direction of your dreams and the pathway will appear.", reflect: "What is that one thing Iâ€™m being guided to act on today?" },
      { name: 'Ask', url: 'https://i.postimg.cc/VLZR2vD5/Ask.png', message: "Ask and it will appear. Donâ€™t hesitate to ask your spirit team for help, guidance and support. They are waiting to hear from you. From clarity to asking for signs, reach out to them.", reflect: "Is there a message that I have been not open to?" },
      { name: 'Visionary', url: 'https://i.postimg.cc/yYRxCrT9/Visionary.png', message: "It can feel lonely not having a map to follow before you, but you are like no one else. You donâ€™t need to wait for the world to validate your ideas. Youâ€™re here to birth a new way.", reflect: "How are the seeds that Iâ€™m sowing today, going to benefit humanity tomorrow?" },
      { name: 'Weave', url: 'https://i.postimg.cc/mDqL0Qz8/Weave.png', message: "You are a weaver - you have the power to merge and alter timelines. Youâ€™re being asked to connect to your highest vision and create that in your physical.", reflect: "How can I birth my highest vision in the now?" }
    ];

    function pickCard() {
      const randomIndex = Math.floor(Math.random() * cards.length);
      const selectedCard = cards[randomIndex];

      document.getElementById("intro").style.display = 'none';
      document.getElementById("cardImage").src = selectedCard.url;
      document.getElementById("cardBox").style.display = 'block';

      document.getElementById("messageText").textContent = selectedCard.message;
      document.getElementById("reflectText").textContent = selectedCard.reflect;
      document.getElementById("messageBox").style.display = 'block';
      document.getElementById("homeBtn").style.display = 'inline-block';
    }

    function goHome() {
      location.reload();
    }

    function showFullScreen() {
      const fullImg = document.getElementById("cardImage").src;
      document.getElementById("fullscreenImage").src = fullImg;
      document.getElementById("fullscreenContainer").style.display = 'flex';
    }

    function closeFullScreen() {
      document.getElementById("fullscreenContainer").style.display = 'none';
    }
  </script>
